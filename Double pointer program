#include <stdio.h>
int main()
{
    int x;
    printf("enter the value: ");
    scanf("%d",&x);
    int *ptr2;
    int **ptr1;
    ptr2 = &x;
    ptr1 = &ptr2;
    printf("Value of var = %d\n",x);
    printf("Value of var using single pointer = %d\n", *ptr2 );
    printf("Value of var using double pointer = %d\n", **ptr1);
    
  return 0;
} 
